<Ui xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<!-- ====== Start of Reserve Import Window ====== -->
	<Frame name="KRTImportWindow" inherits="KRTFrameTemplate" toplevel="true" hidden="true" frameStrata="DIALOG">
		<Size>
			<AbsDimension x="400" y="300" />
		</Size>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
			<TileSize>
				<AbsValue val="6" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="6" />
			</EdgeSize>
			<BackgroundInsets>
				<AbsInset top="3" right="3" bottom="2" left="2" />
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<FontString name="$parentHint" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP">
				<Size>
					<AbsDimension x="360" y="24" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-34" />
						</Offset>
					</Anchor>
				</Anchors>
				<TextInsets>
					<AbsInset top="0" right="0" bottom="0" left="0" />
				</TextInsets>
			</FontString>
			<FontString name="$parentStatus" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="MIDDLE">
				<Size>
					<AbsDimension x="360" y="18" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="20" y="52" />
						</Offset>
					</Anchor>
				</Anchors>
			</FontString>

			<!-- Import mode: Multi-reserve vs Plus System -->
			<Slider name="$parentModeSlider" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="260" y="16" />
				</Size>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP">
						<Offset>
							<AbsDimension x="0" y="-60" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>KRT.ReserveImport:OnModeSliderLoad(self)</OnLoad>
					<OnValueChanged>KRT.ReserveImport:OnModeSliderChanged(self, value)</OnValueChanged>
				</Scripts>
			</Slider>
			<!-- Multiline EditBox for CSV -->
			<ScrollFrame name="KRTImportScrollFrame" inherits="KRTScrollFrameTemplate">
				<Size>
					<AbsDimension x="340" y="160" />
				</Size>
				<Anchors>
					<Anchor point="TOP" relativePoint="TOP">
						<Offset>
							<AbsDimension x="-5" y="-92" />
						</Offset>
					</Anchor>
				</Anchors>
				<ScrollChild>
					<EditBox name="KRTImportEditBox" multiline="true" autoFocus="false" inherits="InputBoxTemplate">
						<Size>
							<AbsDimension x="320" y="160" />
						</Size>
						<Scripts>
							<OnEscapePressed>self:ClearFocus()</OnEscapePressed>
						</Scripts>
					</EditBox>
				</ScrollChild>
			</ScrollFrame>
			<!-- Import Button -->
			<Button name="KRTImportConfirmButton" inherits="KRTButtonTemplate">
				<Size>
					<AbsDimension x="100" y="24" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="20" y="20" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>KRT.ReserveImport:ImportFromEditBox()</OnClick>
				</Scripts>
			</Button>
			<!-- Cancel Button -->
			<Button name="KRTImportCancelButton" inherits="KRTButtonTemplate">
				<Size>
					<AbsDimension x="100" y="24" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-20" y="20" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>KRT.ReserveImport:Hide()</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>KRT.ReserveImport:OnLoad(self)</OnLoad>
		</Scripts>
	</Frame>
	<!-- ====== End of Reserve Import Window ====== -->
</Ui>

